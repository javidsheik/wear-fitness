extends ../layouts/web
  
block main
    .header
      link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800', rel='stylesheet', type='text/css')
      link(rel='stylesheet', href='/css/web/styles/style.css')   
      link(rel='stylesheet', href='/css/web/styles/owl.carousel.css')  
      link(rel='stylesheet', href='/css/web/styles/etalage.css')
      .top-header
        .wrap
          .top-header-left
            ul
              // -cart-tonggle-script--
              script(type='text/javascript').
                $(function(){
                $("#review_submit").click(function(e)
                {
                var capture_review_comment = $("#capture_review_comment").val();
                var capture_review_rating = $("#capture_review_rating").val();
                console.log(capture_review_comment);
                $.ajax(
                {
                url : '/api/capture_review',
                type: "POST",
                data : {'comment': capture_review_comment,'rating' : capture_review_rating},
                success:function(data, textStatus, jqXHR)
                {
                alert(data.data.message);
                },
                error: function(jqXHR, textStatus, errorThrown)
                {
                 alert(data.data.message);     
                }
                });
                e.preventDefault();
                });
                var $cart = $('#cart');
                $('#clickme').click(function(e) {
                e.stopPropagation();
                if ($cart.is(":hidden")) {
                $cart.slideDown("slow");
                } else {
                $cart.slideUp("slow");
                }
                });
                $(document.body).click(function () {
                if ($cart.not(":hidden")) {
                $cart.slideUp("slow");
                }
                });
                });
              // -start-cart-bag--
              li
                a.info(href='#')
                  span  
          .top-header-center
            .top-header-center-alert-left
              h3 FREE SHIPPING 
            .top-header-center-alert-right
              .vticker
                ul
                  li
                    | Applies to all orders. 
                    label Returns are subject to conditions.
            .clear  
          .top-header-right
          .clear  
