      .content.details-page
        // -start-product-details-
        .product-details
          .wrap
            ul.product-head
              li
                a(href='/') Home
              .clear  
            // --details-product-slider-
            // Include the Etalage files     
            
            script(src='js/web/scripts/jquery.easy-ticker.js')
            script(src='js/web/scripts/megamenu.js')
            script(src='js/web/scripts/jquery.etalage.min.js')
            script(src='js/web/scripts/easyResponsiveTabs.js')
            
            // Include the Etalage files
            script.
              jQuery(document).ready(function($){
              $(document).ready(function(){$(".megamenu").megamenu();});
