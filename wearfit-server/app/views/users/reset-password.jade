extends ../layouts/default

block form
 #login-page
 .container
  .form-login
    include ../includes/messages

    form.form-login(action="/reset/#{req.params.token}", method="post", role="form")
     h2.form-login-heading Forgot Password
      input(type='hidden', name='_csrf', value=_csrf)
      p.col-sm-offset-2.error= message      
        .loginwrap
          input.token(type="hidden", name='token', value="#{req.params.token}")
          input.form-control.no-border#new_password(type='password', autocomplete="off" placeholder='New Password', name="password")
          input.form-control.no-border#confirm_new_password(type='password', placeholder='Confirm New Password', name="confirm_new_password")
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Reset Password 